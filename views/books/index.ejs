<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>"></input>
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishAfter %>"></input>
        </div>
        <div class="form-item">
            <label>Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishBefore %>"></input>
        </div>
    </div>

    <div class="form-row form-row-end btn-row">
    <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<div>
    <%- include('../partials/bookGrid',  {books: books , large: true }) %>
</div>
